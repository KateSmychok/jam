{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "rules": {
    "import/prefer-default-export": "warn",
    "no-trailing-spaces": "off",
    "no-unused-vars": "off",
    "consistent-return": "warn",
    "no-loop-func": "off"
  }
}
